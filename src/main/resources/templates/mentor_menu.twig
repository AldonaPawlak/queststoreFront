    <main>


      <aside class="options">
        <div id="options-right">
          <h1>Select option: </h1>
          <ul>
            <li><a href="mentor/students_mentor"><p>SHOW STUDENTS</p></a></li>
            <li><a href="/mentor/add_student"><p>ADD STUDENT</p></a></li>
            <li><a href="/mentor/add_quest"><p>ADD QUEST</p></a></li>
