{#            <a href="#">See students' wallets</a>#}
{#          </div>#}
{#          <div class="item">#}
{#            <a href="/mentor/add_quest">Add new quest</a>#}
{#          </div>#}
{#          <div class="item">#}
{#            <a href="/mentor/add_artifact">Add new reward</a>#}
{#          </div>#}
        </div>
      </section>

      <aside class="right-bar">
        <div id="right-bar-left">
          <img alt="severus" src="/static/img/severus.png">
          <h2>Name: {{ mentor.getFirstName() }}</h2><br>
          <h2>Surname: {{ mentor.getLastName() }}</h2><br>
{#          <h2>Your modules:</h2><br>#}
          {% for module in mentor.getModules() %}

            <h2>Module: {{ module.getName() }}</h2><br>

          {% endfor %}

        </div>
        <div id="right-bar-right">

        </div>
      </aside>

    </main>

    <footer>&copy; Dumbledore's Army</footer>
